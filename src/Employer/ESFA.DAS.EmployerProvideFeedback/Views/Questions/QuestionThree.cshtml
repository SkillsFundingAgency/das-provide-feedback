@{
    ViewBag.PageID = "page-overall-quality-question";
    ViewBag.Title = "Provide Feedback";
}

<div class="grid-row">
    <div class="column-two-thirds">

        <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
            <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                Error on page
            </h2>
            <ul class="error-summary-list">
                <li><a href="#error">Please rate training quality</a></li>
            </ul>
        </div>
        <h1 class="heading-xlarge">
            Training quality rating
        </h1>
        <form asp-route="@RouteNames.QuestionThree_Post">
            <div class="form-group">
                <fieldset class="form-group-error">
                  
                    <legend>
                        <span class="form-label-bold">
                            How do you rate Cyberdynes apprenticeship training?
                        </span>
                        <span class="error-message">
                            Error message here
                        </span>
                    </legend>

                    <div class="multiple-choice">
                        <input id="radio-1" type="radio" name="radio-group" value="Excellent">
                        <label for="radio-1">Excellent</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="radio-2" type="radio" name="radio-group" value="Good">
                        <label for="radio-2">Good</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="radio-3" type="radio" name="radio-group" value="Poor">
                        <label for="radio-3">Poor</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="radio-4" type="radio" name="radio-group" value="Very poor">
                        <label for="radio-4">Very poor</label>
                    </div>
                </fieldset>
            </div>
            <div class="submit-buttons">
                <button type="submit" class="button save-button">Continue</button>
                <a asp-route="@RouteNames.ReviewAnswers_Get" class="button-link">Skip this question</a>
            </div>
        </form>
    </div>
</div>